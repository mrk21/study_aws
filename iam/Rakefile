require '../util'

desc 'Creates a role'
task :create_role do
  aws <<-SH, binding
    aws iam create-role
      --role-name                    test-role
      --assume-role-policy-document  file://<%= Dir.pwd %>/policy.json
  SH
end

desc 'Creates a user'
task :create_user do
  aws <<-SH, binding
    aws iam create-user
      --user-name  test-user
  SH
  
  aws <<-SH, binding
    aws iam create-group
      --group-name  test-group
  SH
  
  aws <<-SH, binding
    aws iam add-user-to-group
      --group-name  test-group
      --user-name   test-user
  SH
  
  aws <<-SH, binding
    aws iam attach-user-policy
      --user-name   test-user
      --policy-arn  arn:aws:iam::aws:policy/AdministratorAccess
  SH
end


desc 'Attaches IAM instance profile'
task :attach_ec2 do
  ec2 = aws <<-SH, binding
    aws ec2 run-instances
      --image-id              ami-0d13700c <%# Amazon Linux %>
      --instance-type         t1.micro
      --key-name              default
      --iam-instance-profile  Name=test-role
  SH
  aws <<-SH, binding
    aws ec2 create-tags
      --resources  <%= ec2['Instances'][0]['InstanceId'] %>
      --tags       'Key=Name,Value=test-iam'
  SH
end
